<project name="Start the birt unit test" default="Start">

	<property name="os" value="linux"/>
	<property name="working.dir" value="${test.dir}/eclipse/plugins"/>
	
	<target name="Start">
		<antcall target="org.eclipse.birt.core.tests"/>
		<antcall target="org.eclipse.birt.report.engine.tests"/>
		<antcall target="org.eclipse.birt.report.engine.emitter.pdf.tests"/>
		<antcall target="org.eclipse.birt.report.engine.emitter.html.tests"/>
		<antcall target="org.eclipse.birt.report.model.tests"/>
		<antcall target="org.eclipse.birt.report.model.adapter.oda.tests"/>
        <antcall target="org.eclipse.birt.data.tests"/>
        <antcall target="org.eclipse.birt.report.data.oda.jdbc.tests"/>
        <antcall target="org.eclipse.birt.chart.tests"/>
	</target>
	
	<target name="org.eclipse.birt.core.tests">
		<ant dir="${working.dir}/org.eclipse.birt.core.tests_@REPLACE_BY_BUILD_ID@" antfile="test.xml">
			<property name="os" value="${os}"/>
		</ant>
	</target>
	<target name="org.eclipse.birt.report.engine.tests">
		<ant dir="${working.dir}/org.eclipse.birt.report.engine.tests_@REPLACE_BY_BUILD_ID@" antfile="test.xml">
			<property name="os" value="${os}"/>
		</ant>
	</target>
	<target name="org.eclipse.birt.report.engine.emitter.pdf.tests">
		<ant dir="${working.dir}/org.eclipse.birt.report.engine.emitter.pdf.tests_@REPLACE_BY_BUILD_ID@" antfile="test.xml">
			<property name="os" value="${os}"/>
		</ant>
	</target>
	<target name="org.eclipse.birt.report.engine.emitter.html.tests">
		<ant dir="${working.dir}/org.eclipse.birt.report.engine.emitter.html.tests_@REPLACE_BY_BUILD_ID@" antfile="test.xml">
			<property name="os" value="${os}"/>
		</ant>
	</target>
	<target name="org.eclipse.birt.report.model.tests">
		<ant dir="${working.dir}/org.eclipse.birt.report.model.tests_@REPLACE_BY_BUILD_ID@" antfile="test.xml">
			<property name="os" value="${os}"/>
			<property name="vmargs" value="  -Xms800M -Xmx800M"/>
		</ant>
	</target>
	<target name="org.eclipse.birt.report.model.adapter.oda.tests">
		<ant dir="${working.dir}/org.eclipse.birt.report.model.adapter.oda.tests_@REPLACE_BY_BUILD_ID@" antfile="test.xml">
			<property name="os" value="${os}"/>
		</ant>
	</target>
    <target name="org.eclipse.birt.data.tests">
            <ant dir="${working.dir}/org.eclipse.birt.data.tests_@REPLACE_BY_BUILD_ID@" antfile="test.xml">
                    <property name="os" value="${os}"/>
            </ant>
    </target>
    <target name="org.eclipse.birt.report.data.oda.jdbc.tests">
            <ant dir="${working.dir}/org.eclipse.birt.report.data.oda.jdbc.tests_@REPLACE_BY_BUILD_ID@" antfile="test.xml">
                    <property name="os" value="${os}"/>
            </ant>
    </target>
    <target name="org.eclipse.birt.chart.tests">
            <ant dir="${working.dir}/org.eclipse.birt.chart.tests_@REPLACE_BY_BUILD_ID@" antfile="test.xml">
                    <property name="os" value="${os}"/>
            </ant>
    </target>
</project>
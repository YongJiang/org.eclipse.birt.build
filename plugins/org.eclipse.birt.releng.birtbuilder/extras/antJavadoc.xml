	</target>
	
	<target name="CleanLastOutput">
		<delete failonerror="false">
			<fileset dir="${javadoc.dir}">
			    <include name="**"/>
			</fileset>
		</delete>
	</target>
	
	<target name="UnzipBIRT">
		<!-- unzip BIRT bits -->
		<property file="${buildDirectory}/finalPluginsVersions.properties"/>
		<exec executable="unzip" dir="${postingDirectory}/${buildId}">
			<arg line="-o -q birt-report-framework-2_2_2.zip -d ${javadoc.dir}" />
		</exec>
		<!-- copy iText jars -->
		<copy todir="${javadoc.dir}/eclipse/plugins/com.lowagie.itext_${com.lowagie.itext}/lib">
			<fileset dir="${p4.home}/iText">
				<include name="*.jar"/>
			</fileset>
		</copy>
		<!-- copy baseLocation plugins -->
		<copy todir="${javadoc.dir}/eclipse/plugins">
			<fileset dir="${baseLocation}/plugins">
				<include name="*/**"/>
			</fileset>
		</copy>
		<!-- Delete EMF 2.3 jars working folder -->
		<delete failonerror="false" >
			<fileset dir="${javadoc.dir}/eclipse/plugins">
				<include name="org.eclipse.emf*.jar"/>
				<include name="org.eclipse.emf*/**"/>
				<include name="org.eclipse.xsd*jar"/>
				<include name="org.eclipse.xsd*/**"/>
			</fileset>
		</delete>
		<!-- Copy EMF 2.2 jars to working folder -->
		<copy todir="${javadoc.dir}/eclipse/plugins">
			<fileset dir="${baseLocation.emf}/plugins">
				<include name="*/**"/>
			</fileset>
		</copy>
	</target>
		
	<target name="GenClasspath">
		<exec executable="${eclipse.build.configs}/../../extras/antJavadoc.sh">
			<arg line=" ${javadoc.dir}/eclipse" />
			<arg line=" ${javadoc.dir}"/>
		</exec>
	</target>
	
	<target name="Clean">
		<delete dir="${javadoc.dir}/eclipse" failonerror="false" />
		<delete file="${javadoc.dir}/classpath.properties" failonerror="false" />
	</target>
	
	<target name="init">
		<mkdir dir="${javadoc.dir}"/>
	</target>	

	
	<target name="GenJavaDoc" depends="init">
		<forEach iteratorId="project.list" failonerror="false" failureProperty="task.status">
			<dynamicProperty name="projectName" value="current.projectName" />
			<dynamicProperty name="windowTitle" value="current.windowTitle" />
			<antcall target="antJavaDoc"/>
		</forEach>
		<forEach iteratorId="project.doctitle.list" failonerror="false" failureProperty="task.status">
			<dynamicProperty name="projectName" value="current.projectName" />
			<dynamicProperty name="windowTitle" value="current.windowTitle" />
			<dynamicProperty name="docTitle" value="current.doctitle"/>
			<antcall target="antJavaDocWithDocTitle"/>
		</forEach>
		<!-- JavaDoc for viewer -->
		<mkdir dir="${javadoc.dir}/org.eclipse.birt.report.viewer" />
		<javadoc destdir="${javadoc.dir}/org.eclipse.birt.report.viewer" 
				 author="true" 
				 version="true" 
				 use="true" 
				 windowtitle="BIRT Viewer Project" 
				 source="${javacSource}"
				 classpath="${classpath}"
				 packagenames="org.eclipse.birt.report.viewer.*">
				<packageset dir="${buildDirectory}/plugins/org.eclipse.birt.report.viewer/src" defaultexcludes="yes" />
				<packageset dir="${buildDirectory}/plugins/org.eclipse.birt.report.viewer/birt/WEB-INF/classes" defaultexcludes="yes" />
	 	        <bottom><![CDATA[<i>Copyright &#169;  2005 Actuate Corp. All rights reserved. </i>]]></bottom>
		</javadoc>

	</target>

	<target name="antJavaDoc" depends="checkProjectHasSrc" if="has.src">
		<mkdir dir="${javadoc.dir}/${projectName}" />
		<property file="${javadoc.dir}/classpath.properties"/>
		<javadoc destdir="${javadoc.dir}/${projectName}" 
				 author="true" 
				 version="true" 
				 use="true" 
				 windowtitle="${windowTitle}" 
				 source="${javacSource}"
				 classpath="${classpath}"
				 packagenames="${packagenames}">
				<packageset dir="${buildDirectory}/plugins/${projectName}/src" defaultexcludes="yes" />
	 	        <bottom><![CDATA[<i>Copyright &#169;  2005 Actuate Corp. All rights reserved. </i>]]></bottom>
		</javadoc>	
	</target>
	
	<target name="antJavaDocWithDocTitle" depends="checkProjectHasSrc" if="has.src">
		<mkdir dir="${javadoc.dir}/${projectName}" />
		<property file="${javadoc.dir}/classpath.properties"/>
		<javadoc destdir="${javadoc.dir}/${projectName}" 
				 author="true" 
				 version="true" 
				 use="true" 
				 windowtitle="${windowTitle}" 
				 source="${javacSource}"
				 classpath="${classpath}"
				doctitle="${docTitle}" 
				 packagenames="${packagenames}">
				<packageset dir="${buildDirectory}/plugins/${projectName}/src" defaultexcludes="yes" />
	 	        <bottom><![CDATA[<i>Copyright &#169;  2005 Actuate Corp. All rights reserved. </i>]]></bottom>
		</javadoc>
	</target>
	
	<target name="checkProjectHasSrc">
		<condition property="has.src">
			<and>
				<available file="${buildDirectory}/plugins/${projectName}/src" />
			</and>
		</condition>
	</target>
